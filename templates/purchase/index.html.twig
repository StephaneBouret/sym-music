{% extends 'base.html.twig' %}

{% block title %}Mes commandes
{% endblock %}

{% block body %}
	<div class="container pt-5">
		<h1>Mes commandes</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Num√©ro</th>
					<th>Date de commande</th>
					<th>Billets</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{% for p in purchases %}
					<tr>
						<td>{{ p.id }}</td>
						<td>{{ p.purchasedAt | format_datetime(locale: 'fr') }}</td>
						<td>
						<ul>
						{% for item in p.purchaseItems %}
							<li>
							{{ item.quantity}} x {{ item.ticketName }} <small>({{ item.total | amount }})</small>
							</li>
						{% endfor %}
						</ul>
						</td>
						<td>{{ p.total | amount }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
