{% extends 'base.html.twig' %}

{% block title %}Votre panier
{% endblock %}

{% block body %}
	<div class="container pt-5">
		<h1>Votre panier</h1>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Billet</th>
					<th>Prix</th>
					<th>Quantit√©</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td>{{ item.ticket.category}}
							{{ item.ticket.name }}
							{% if item.ticket.category == 'Pass' %}
								jours
							{% endif %}
							<small>{{ item.days | join('-') }}</small>
						</td>
						<td>{{ item.ticket.price | amount }}</td>
						<td>{{ item.qty}}</td>
						<td>{{ (item.qty * item.ticket.price) | amount }}</td>
					</tr>
				{% endfor %}
			</tbody>
			<tfoot>
				<tr>
					<td colspan="3">Total :</td>
					<td>{{ total | amount }}</td>
				</tr>
			</tfoot>
		</table>
	</div>
{% endblock %}
